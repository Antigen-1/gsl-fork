; Script generated by the Inno Setup Script Wizard.
; SEE THE DOCUMENTATION FOR DETAILS ON CREATING INNO SETUP SCRIPT FILES!

[Setup]
AppName=the GNU Scientific Library
AppVerName=the GNU Scientific Library @VERSION@
AppPublisher=Brian Gough
AppPublisherURL=http://www.network-theory.co.uk/gsl/
AppSupportURL=http://www.network-theory.co.uk/gsl/
AppUpdatesURL=http://www.network-theory.co.uk/gsl/
DefaultDirName={pf}\GSL-@VERSION@
DefaultGroupName=GNU Scientific Library @VERSION@
AlwaysCreateUninstallIcon=yes
LicenseFile=Copying
InfoBeforeFile=Readme
InfoAfterFile=msvc\README.txt
; uncomment the following line if you want your installation to run on NT 3.51 too.
; MinVersion=4,3.51

[Files]
Source: "msvc\README.txt"; DestDir: "{app}";
Source: "Copying"; DestDir: "{app}";
Source: "README"; DestDir: "{app}";
Source: "NEWS"; DestDir: "{app}";
Source: "THANKS"; DestDir: "{app}";
Source: "AUTHORS"; DestDir: "{app}";
;
Source: "gsl\*.*"; DestDir: "{app}\include\gsl";
;
Source: "msvc\Release\libgsl.lib"; DestDir: "{app}\lib";
Source: "msvc\Release\libgslcblas.lib"; DestDir: "{app}\lib"; 
Source: "msvc\Debug\libgsl.lib"; DestDir: "{app}\lib";
Source: "msvc\Debug\libgslcblas.lib"; DestDir: "{app}\lib"; 
;
Source: "doc\html\*.html"; DestDir: "{app}\doc"; 
;
Source: "msvc\demo\*.*"; DestDir: "{app}\demo";

[Icons]
Name: "{group}\GNU Scientific Library"; Filename: "{app}\README.txt"

